<p>
  <strong>Name:</strong>
  <%= @list.name %>
</p>
 
<p>
  <strong>Url:</strong>
  <%= @list.url %>
</p>


<h2>Tasks</h2>
<% @list.tasks.each do |task| %>

	<p>
    <strong>Type:</strong>
    <%= task.type %>
  </p>
  <p>
    <strong>Description:</strong>
    <%= task.description %>
  </p>
 
  <p>
    <strong>State:</strong>
    <%= task.state %>
  </p>

  <p>
    <strong>Priority:</strong>
    <%= task.priority %>
  </p>

<% end %>


