<h1>List</h1>

<p>
  <strong>Name:</strong>
  <%= @list.name %>
</p>
 
<p>
  <strong>Url:</strong>
  <%= @list.url %>
</p>


<h2>Tasks</h2>

<table class="table">
  <tr>
    <th>Type</th>
    <th>Description</th>
    <th>State</th>
    <th>Priority</th>
  </tr>


<% @list.tasks.each do |task| %>

<tr>
      <td><%= task.type %></td>
      <td><%= task.description %></td>
      <td><%= task.state %></td>
      <td><%= task.priority %></td>
      
      <td><%= link_to 'Edit', [:edit, task.list, task] %></td>
      <td><%= link_to 'Destroy', [task.list, task],
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>


<h2>Add a task:</h2>

<p>
<%= link_to 'New Simple Task', new_list_simple_task_path(@list) %>
</p>
<p>
<%= link_to 'New Temporal Task', new_list_temporal_task_path(@list) %>
</p>
<p>
<%= link_to 'New Long Task', new_list_long_task_path(@list) %>
</p>


<%= link_to 'Edit', edit_list_path(@list) %> |
<%= link_to 'Back', lists_path %>