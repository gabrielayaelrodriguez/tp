<div class="form-group">


  <% if @longTask.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@longTask.errors.count, "error") %> prohibited
        this task from being saved:
      </h2>
      <ul>
        <% @longTask.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


<%= form_for [@list, @longTask] do |f| %>
  <p>
    <%= f.label :description %><br>
    <%= f.text_field :description, :class => "form-control" %>
  </p>
  <p>
    <%= f.label :state %><br>
    <%= f.select :state, options_for_select(['Pendient', 'Done', 'In course']), {}, class: "form-control" %>
  </p>
  <p>
    <%= f.label :priority %><br>
    <%= f.select :priority, options_for_select(['High', 'Medium', 'Low']), {}, class: "form-control" %>
  </p>
  <p>
    <%= f.label :percentage %><br>
    <%= f.number_field :percentage, min: 0, max: 100, step: :any %>
  </p>

  <p><br>
    <%= f.submit  :class => "btn btn-success"%>
  </p>
<% end %>

</div>